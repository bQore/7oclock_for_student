<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@drawable/ll_testpaper_rank_list"
            android:gravity="center_vertical" android:padding="5dp">
        <FrameLayout
                android:layout_width="180dp"
                android:layout_height="120dp" android:background="@drawable/ll_testpaper_question_list_question"
                android:padding="2dp">
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/iv_qna_question_list_list_src" android:src="@drawable/default_question"
                    android:scaleType="centerCrop"
            />
            <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pb_qna_question_list_list_loading" android:layout_gravity="center"
            />
        </FrameLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingLeft="10dp" android:paddingTop="5dp"
                    android:paddingRight="10dp">
                <net.sevenoclock.mobile.customobj.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중학교 3학년 | 피타고라스의 정리"
                        android:id="@+id/tv_qna_question_list_list_unit" android:singleLine="false" android:textSize="10sp"
                        android:textColor="#999999" android:layout_marginBottom="10dp"/>
                <net.sevenoclock.mobile.customobj.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홍길동"
                        android:id="@+id/tv_qna_question_list_list_username" android:singleLine="false" android:textSize="14sp"
                        android:textColor="#666666" android:layout_marginBottom="10dp"/>
                <net.sevenoclock.mobile.customobj.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내용"
                        android:id="@+id/tv_qna_question_list_list_contents" android:singleLine="false" android:textSize="14sp"
                        android:textColor="#000000" android:layout_marginBottom="10dp"/>
                <net.sevenoclock.mobile.customobj.FontTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0초 전"
                        android:id="@+id/tv_qna_question_list_list_time" android:singleLine="false" android:textSize="10sp"
                        android:textColor="#999999" android:layout_marginBottom="5dp" android:textIsSelectable="false"
                        android:gravity="bottom|right"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:paddingLeft="20dp"
                android:id="@+id/iv_qna_question_list_list_more"
                android:src="@drawable/ic_menu_moreoverflow_normal_holo_light" android:layout_gravity="top|right"
                android:layout_marginTop="5dp" android:layout_marginRight="2dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>