<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
            android:background="@drawable/ll_main_view_box">
        <net.sevenoclock.mobile.customobj.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/tv_main_search_box_title" android:textColor="#666666" android:textSize="16dp" android:layout_margin="5dp"
                android:background="@drawable/tv_main_search_box_title" android:textStyle="bold"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/ll_main_search_box_list"
                android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="10dp">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>