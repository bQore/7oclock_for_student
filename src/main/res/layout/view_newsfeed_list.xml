<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_main_view_box">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="10dp">
        <ImageView
            android:id="@+id/iv_newsfeed_icon"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/ic_launcher"
            android:scaleType="fitCenter" />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            <net.sevenoclock.mobile.customobj.FontTextView
                    android:id="@+id/ftv_newsfeed_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="내용"
                    android:gravity="center_vertical"
                    android:textSize="15sp" />
            <net.sevenoclock.mobile.customobj.FontTextView
                    android:id="@+id/ftv_newsfeed_date"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ftv_newsfeed_text"
                    android:gravity="right"
                    android:text="일시"
                    android:textSize="10sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>