<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/ll_testpaper_answer_result_quick_line"
              android:gravity="center_vertical">

    <net.sevenoclock.mobile.customobj.FontTextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:id="@+id/tv_testpaper_answer_result_quick_index" android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="match_parent" android:background="#DDDDDD">
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" android:focusableInTouchMode="false">
        <net.sevenoclock.mobile.customobj.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_testpaper_answer_result_quick_answer" android:textSize="16sp" android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>