<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#FFFFFF">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" android:paddingLeft="10dp" android:paddingTop="10dp"
            android:paddingBottom="10dp" android:background="#FFFFFF">
        <net.sevenoclock.mobile.customobj.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 그룹"
                android:id="@+id/textView2" android:textSize="18sp" android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="#eeeeee" android:layout_margin="10dp">
        </LinearLayout>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_main_union_list" android:dividerHeight="0dp" android:divider="#00000000"/>
    </LinearLayout>

</LinearLayout>