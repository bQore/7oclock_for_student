<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_search_list_nodata" android:src="@drawable/search_list_nodata"
            android:scaleType="centerInside" android:visibility="gone" android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_marginTop="5dp" android:paddingLeft="10dp"
            android:background="#FFFFFF" android:id="@+id/ll_search_list_view">
        <ListView
                android:id="@+id/lv_search_list_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
    </LinearLayout>
</LinearLayout>