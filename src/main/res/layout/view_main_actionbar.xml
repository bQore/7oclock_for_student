<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="fill_parent"
             android:layout_gravity="fill_horizontal"
             android:background="@drawable/ll_main_actionbar_background">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/iv_main_actionbar_unionbtn" android:padding="7dp"
            android:scaleType="centerInside" android:src="@drawable/default_user" android:adjustViewBounds="true"
            android:clickable="true" android:layout_gravity="right" android:layout_marginRight="4dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/iv_main_actionbar_logo" android:src="@drawable/head_logo" android:layout_gravity="center"
            android:padding="5dp"/>
    <net.sevenoclock.mobile.customobj.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/ic_main_actionbar_menu"
            android:id="@+id/tv_main_actionbar_menubtn" android:layout_marginLeft="8dp" android:textSize="30sp"
            android:textStyle="bold" android:gravity="center_vertical|center_horizontal" android:textColor="#FFFFFF"/>

</FrameLayout>