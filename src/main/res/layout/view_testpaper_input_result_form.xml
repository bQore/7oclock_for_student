<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/ll_testpaper_answer_result_quick_line"
              android:gravity="center_vertical">

    <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp" android:layout_weight="0">
        <net.sevenoclock.mobile.customobj.FontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/tv_testpaper_input_result_quick_index" android:gravity="center_vertical|center_horizontal"/>
        <net.sevenoclock.mobile.customobj.IconTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_testpaper_input_result_quick_icon" android:gravity="center_vertical|center_horizontal"
                android:text="@string/ic_testpaper_input_result_quick_o" android:textColor="#2ecc71" android:textSize="40sp"/>
    </FrameLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="match_parent" android:background="#DDDDDD">
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" android:focusableInTouchMode="false">
        <net.sevenoclock.mobile.customobj.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_testpaper_input_result_quick_x" android:layout_marginRight="10dp"
                android:textColor="#e74c3c" android:textSize="16sp"/>
        <net.sevenoclock.mobile.customobj.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_testpaper_input_result_quick_o" android:textSize="16sp" android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>