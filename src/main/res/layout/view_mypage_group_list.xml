<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/ll_mypage_group_list">
    <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp">
        <ImageView
                android:id="@+id/iv_group_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_launcher"
                android:scaleType="fitCenter"/>
        <net.sevenoclock.mobile.customobj.FontTextView
            android:id="@+id/tv_main_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#66ffffff"
            android:gravity="center"
            android:text="대표 소속"
            android:textSize="20sp"
            android:textColor="#333" />
        <net.sevenoclock.mobile.customobj.IconTextView
                android:id="@+id/itv_mypage_group_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="ⓧ"
                android:textSize="25sp"
                android:textColor="#000" />
    </RelativeLayout>


</LinearLayout>