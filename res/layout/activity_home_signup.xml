<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/sinup_page_View"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <EditText
                android:id="@+id/et_home_signup_userid"
                android:layout_width="match_parent"
                android:background="@drawable/et_home_signup_userinput"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ems="20"
                android:hint="아이디" />
        <EditText
                android:id="@+id/et_home_signup_userpw"
                android:layout_width="match_parent"
                android:background="@drawable/et_home_signup_userinput"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:ems="20"
                android:hint="비밀번호"
                android:inputType="textPassword" >
        </EditText>


        <EditText
                android:id="@+id/et_home_signup_userpw_ck"
                android:layout_width="match_parent"
                android:background="@drawable/et_home_signup_userinput"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:ems="20"
                android:hint="비밀번호 확인"
                android:inputType="textPassword" />

    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginTop="12dp"
            android:background="#70909090" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

        <EditText
                android:id="@+id/et_home_signup_username"
                android:layout_width="match_parent"
                android:background="@drawable/et_home_signup_userinput"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName" />

        <EditText
                android:id="@+id/et_home_signup_useremail"
                android:layout_width="match_parent"
                android:background="@drawable/et_home_signup_userinput"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="이메일"
                android:inputType="textEmailAddress" />

        <EditText
                android:id="@+id/et_home_signup_userphone"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_home_signup_userinput"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ems="10"
                android:hint="연락처"
                android:inputType="phone" />
    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginTop="12dp"
            android:background="#70909090" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left" >

            <EditText
                    android:id="@+id/et_home_signup_userschool"
                    android:layout_width="wrap_content"
                    android:background="@drawable/et_home_signup_userinput"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ems="9"
                    android:editable="false"
                    android:hint="학교명" />

            <Button
                    android:id="@+id/btn_home_signup_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/btn_home_signup_btn"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="검색" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp" >

            <EditText
                    android:id="@+id/et_home_signup_usergrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="right"
                    android:digits="0123456789"
                    android:background="@drawable/et_home_signup_userinput"
                    android:ems="5"
                    android:hint="학년"
                    android:inputType="number"
                    android:maxLength="1" />

            <EditText
                    android:id="@+id/et_home_signup_userclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:background="@drawable/et_home_signup_userinput"
                    android:layout_marginLeft="25dp"
                    android:digits="0123456789"
                    android:ems="5"
                    android:hint="반"
                    android:inputType="number"
                    android:maxLength="2" />
        </LinearLayout>
    </LinearLayout>

    <Button
            android:id="@+id/btn_home_signup_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:background="@drawable/btn_home_signup_btn"
            android:textColor="#FFFFFF"
            android:text="회원가입" />

</LinearLayout>